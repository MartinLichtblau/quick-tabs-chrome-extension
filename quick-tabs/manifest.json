{
  "background": {
    "scripts": ["background.js"],
		"persistent": true
  },
  "browser_action": {
    "default_icon": "assets/icon-32.png",
    "default_title": "Quick Tabs",
    "default_popup": "Options.html"
  },
  "description": "A keyboard centric most recently used (MRU) ordered tab list plugin with search and switch functionality inspired by IntelliJ IDEA",
  "icons": {
    "128": "assets/icon-128.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png"
  },
  "minimum_chrome_version": "70",
  "manifest_version": 2,
  "name": "Quick Tabs",
  "options_page": "options.html",
  "permissions": [ 
		"tabs", 
		"bookmarks", 
		"history", 
		"http://*/",
		"https://*/",
        "activeTab",
        "<all_urls>"
	],
  "update_url": "http://clients2.google.com/service/update2/crx",

  "version": "2019.2.27",

  "commands": {
    "_execute_browser_action": {
    },
		"quick-search-tab": {
			"suggested_key": {
				"default": "Alt+A"
			},
      "description": "Open search"
    },
    "quick-prev-tab": {
			"suggested_key": {
				"default": "Alt+D"
			},
      "description": "Switch to Older tab"
    },
    "quick-next-tab": {
			"suggested_key": {
				"default": "Alt+S"
			},
      "description": "Switch to Newer tab"
    }
  }
}
